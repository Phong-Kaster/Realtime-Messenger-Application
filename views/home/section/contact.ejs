<div class="modal fade" id="contactsModal" role="dialog">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Contact Management</h4>
            </div>
            <div class="modal-body">
                <ul class="nav nav-tabs">
                    <li class="active"><a data-toggle="tab" href="#find-user">Search Messenger</a></li>
                    <li><a data-toggle="tab" id="link-contacts" href="#contacts">
                        Friends
                        <% if(quantityOfFriendContacts > 0){ %> 
                            <span class="show-number-contacts count-contacts count-friend-contact">(<strong><%= quantityOfFriendContacts%></strong>)</span>
                        <%}else{%>
                            <span class="show-number-contacts count-contacts count-friend-contact"></span>
                        <%}%>
                    </a></li>
                    <li><a data-toggle="tab" id="link-request-contact-sent" href="#request-contact-sent">
                        Wait For Confirmation
                        <% if(quantifyOfSentFriendRequestContact > 0){ %> 
                            <span class="show-number-contacts count-contacts count-sent-friend-contact">(<strong><%= quantifyOfSentFriendRequestContact%></strong>)</span>
                        <%}else{%>
                            <span class="show-number-contacts count-contacts count-sent-friend-contact"></span>
                        <%}%>
                    </a></li>
                    <li><a data-toggle="tab" id="link-request-contact-received" href="#request-contact-received">
                        Friend Requests
                        <% if(quantityOfReceivedFriendRequestContacts > 0){ %> 
                            <span class="show-number-contacts count-contacts count-received-friend-contact">(<strong><%= quantityOfReceivedFriendRequestContacts%></strong>)</span>
                        <%}else{%>
                            <span class="show-number-contacts count-contacts count-received-friend-contact"></span>
                        <%}%>
                    </a></li>
                </ul>
                <div class="tab-content">
                    <div id="find-user" class="tab-pane fade in active">
                        <div class="find-user-top">
                            <div class="input-group col-md-12">
                                <input id="keyword" type="text" class="form-control" placeholder="Enter a username or e-mail" />
                                <span class="input-group-btn">
                                    <button id="btn-search-keyword" class="btn btn-lg" type="button">
                                        <i class="glyphicon glyphicon-search"></i>
                                    </button>
                                </span>
                            </div>
                        </div>
                        <div class="find-user-bottom">
                            <ul class="contactList">
                                <!-- include (./views/home/section/contactResultSearchUser.ejs)-->
                            </ul>
                        </div>
                    </div>
                    <div id="contacts" class="tab-pane fade">
                        <div class="find-user-bottom">
                            <ul class="contactList">
                                <% friendContacts.forEach(function(element){ %> 
                                <li class="_contactList" data-uid="<%= element._id %>">
                                    <div class="contactPanel">
                                        <div class="user-avatar">
                                            <img src="./images/users/<%= element.avatar %>" alt="">
                                        </div>
                                        <div class="user-name">
                                            <p>
                                                <%= element.username %>
                                            </p>
                                        </div>
                                        <br>
                                        <div class="user-address">
                                            <span>&nbsp <%= element.address %></span>
                                        </div>
                                        <div class="user-talk" data-uid="<%= element._id %>">
                                            Chat
                                        </div>
                                        <div class="user-remove-contact action-danger" data-uid="<%= element._id %>">
                                            Remove
                                        </div>
                                    </div>
                                </li>
                                <% }) %>
                            </ul>
                            <div id="read-more-friend-contacts">
                                <a href="#" id="btn-read-more-friend-contacts" ><strong>Read more friend contacts</strong></a>
                                <div class="lds-ring"><div></div><div></div><div></div><div></div></div>
                            </div>
                        </div>
                    </div>
                    <div id="request-contact-sent" class="tab-pane fade">
                        <div class="find-user-bottom">
                            <ul class="contactList">
                                <% sentFriendRequestContacts.forEach(function(element){ %> 
                                <li class="_contactList" data-uid="<%= element._id %>">
                                    <div class="contactPanel">
                                        <div class="user-avatar">
                                            <img src="./images/users/<%= element.avatar %>" alt="">
                                        </div>
                                        <div class="user-name">
                                            <p>
                                                <%= element.username %>
                                            </p>
                                        </div>
                                        <br>
                                        <div class="user-address">
                                            <span>&nbsp <%= element.address %></span>
                                        </div>
                                        <div class="user-remove-request-contact display-important action-danger" data-uid="<%= element._id %>">
                                            Cancel Friend Request
                                        </div>
                                    </div>
                                </li>
                                <% }) %>
                            </ul>
                            <div id="read-more-sent-friend-request-contacts">
                                <a href="#" id="btn-read-more-sent-friend-request-contacts" ><strong>Read more sent friend request contacts</strong></a>
                                <div class="lds-ring"><div></div><div></div><div></div><div></div></div>
                            </div>
                        </div>
                    </div>
                    <div id="request-contact-received" class="tab-pane fade">
                        <div class="find-user-bottom">
                            <ul class="contactList">
                                <% receivedFriendRequestContacts.forEach(function(element){ %> 
                                <li class="_contactList" data-uid="<%= element._id %>">
                                    <div class="contactPanel">
                                        <div class="user-avatar">
                                            <img src="./images/users/<%= element.avatar %>" alt="">
                                        </div>
                                        <div class="user-name">
                                            <p>
                                                <%= element.username %>
                                            </p>
                                        </div>
                                        <br>
                                        <div class="user-address">
                                            <span>&nbsp <%= element.address %></span>
                                        </div>
                                        <div class="user-acccept-contact-received" data-uid="<%= element._id %>">
                                            Accept
                                        </div>
                                        <div class="user-reject-request-contact-received action-danger" data-uid="<%= element._id %>">
                                            Refuse
                                        </div>
                                    </div>
                                </li>
                                <%})%>
                            </ul>
                            <div id="read-more-received-friend-request-contacts">
                                <a href="#" id="btn-read-received-friend-contacts" ><strong>Read more received friend request contacts</strong></a>
                                <div class="lds-ring"><div></div><div></div><div></div><div></div></div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>